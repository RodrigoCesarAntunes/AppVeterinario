<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeterinarioConsulta.Controles.Carregamento.ModalDeCarregamento">

    <StackLayout BackgroundColor="Transparent" Padding="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Frame HorizontalOptions="Center" BackgroundColor="DarkGray" VerticalOptions="Center"  CornerRadius="20" Padding="0" WidthRequest="120">
            <StackLayout >
                <ActivityIndicator Color="FloralWhite" IsRunning="True" />
                <Label Text="Carregando..." TextColor="FloralWhite" FontAttributes="Bold" HorizontalOptions="Center" x:Name="lblCarregando"/>
            </StackLayout>
        </Frame>
        
    </StackLayout>
    
</pages:PopupPage>