<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             xmlns:textbox="clr-namespace:VeterinarioConsulta.Controles.TextBox"
             xmlns:botao="clr-namespace:VeterinarioConsulta.Controles.Botao"
             x:Class="VeterinarioConsulta.Paginas.Mascotes">
    <ContentPage.Content>
        <StackLayout x:Name="StackMascotes">
            <Label>Mascotes vão aqui</Label>

            <textbox:TextBoxValidacao x:Name="txtValidacao" Placeholder="Teste" Keyboard="Email" AutoValidacao="True" />
            <textbox:TextBoxValidacao x:Name="txtPadrao" Placeholder="Teste" Keyboard="Email" />

            <botao:BotaoPadrao Clicked="Button_Clicked" Text="Alterar propriedade isvaldo"></botao:BotaoPadrao>


            <controls:FloatingActionButton x:Name="FAB" HorizontalOptions="EndAndExpand"
                                           WidthRequest="100" HeightRequest="100"  
                                           VerticalOptions="EndAndExpand" Image="add.png" 
                                           ButtonColor="White" />
                                           

        </StackLayout>
    </ContentPage.Content>
</ContentPage>